# ============================================
# DOAPP - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=production
CLIENT_URL=https://doapparg.site

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/doapp?retryWrites=true&w=majority

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ============================================
# OAuth - Google
# ============================================
GOOGLE_CLOUD_AUTH_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLOUD_AUTH_PASS=your-google-client-secret

# ============================================
# OAuth - Facebook
# ============================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================
# PayPal Configuration
# ============================================
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_PLATFORM_FEE_PERCENTAGE=5

# ============================================
# Firebase (Push Notifications)
# ============================================
FIREBASE_SERVICE_ACCOUNT_KEY=base64-encoded-service-account-json

# ============================================
# Email Service Provider (Hostinger SMTP via nodemailer)
# ============================================
# Hostinger SMTP Settings:
# - For SSL (recommended): Port 465 with SMTP_SECURE=true
# - For STARTTLS: Port 587 with SMTP_SECURE=false
#
# IMPORTANT:
# 1. Create email account in Hostinger panel first
# 2. Use full email address as SMTP_USER (e.g., noreply@yourdomain.com)
# 3. Use the email password (not your Hostinger account password)
# 4. Make sure SMTP is enabled in Hostinger email settings
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@doapparg.site
SMTP_PASS=your-email-account-password-here
SMTP_FROM_EMAIL=noreply@doapparg.site

# ============================================
# Twilio (SMS/Phone Verification Only)
# ============================================
# En desarrollo (NODE_ENV=development), usa estas credenciales de prueba:
TWILIO_TEST_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TEST_AUTH_TOKEN=your_test_auth_token_from_twilio
TWILIO_TEST_PHONE_NUMBER=+15005550006

# En producci√≥n (NODE_ENV=production), usa estas credenciales reales:
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_production_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Redis (Caching) - OPTIONAL
# ============================================
REDIS_URL=

# ============================================
# Google Analytics - OPTIONAL
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# Frontend Environment Variables
# ============================================
VITE_API_URL=https://api.doapparg.site
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
