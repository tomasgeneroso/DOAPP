# Environment Variables Example
# Copy this file to .env and fill in your values

# App Configuration
VITE_APP_NAME="Doers"

# ========================================
# BACKEND CONFIGURATION
# ========================================

# Base de datos MongoDB
# Obtén tu URI de MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# Formato: mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/doers

# JWT Secret
# Genera un secreto seguro: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu-secreto-super-seguro-cambialo-en-produccion
JWT_EXPIRE=7d

# Servidor
PORT=5000
NODE_ENV=development

# Frontend URL (para CORS)
CLIENT_URL=http://localhost:5173

# ========================================
# OPCIONAL: Servicios de terceros
# ========================================

# Stripe (pagos)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLIC_KEY=pk_test_...

# SendGrid (emails)
# SENDGRID_API_KEY=SG...

# AWS S3 (almacenamiento de archivos)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=

# Cloudinary (imágenes)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
