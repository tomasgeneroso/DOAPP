# ============================================
# DOAPP - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:3001

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/doapp?retryWrites=true&w=majority

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ============================================
# OAuth - Google
# ============================================
GOOGLE_CLOUD_AUTH_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLOUD_AUTH_PASS=your-google-client-secret

# ============================================
# OAuth - Facebook
# ============================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================
# PayPal Configuration (LEGACY - Solo para usuarios antiguos)
# ============================================
# Get credentials from: https://developer.paypal.com/dashboard/
PAYPAL_MODE=sandbox

# Sandbox Credentials (for development/testing)
PAYPAL_SANDBOX_CLIENT_ID=your-sandbox-client-id
PAYPAL_SANDBOX_SECRET=your-sandbox-secret
SANDBOX_BUSINESS_ACCOUNT=sb-xxxxx@business.example.com
SANDBOX_PERSONAL_ACCOUNT=sb-xxxxx@personal.example.com
SANDBOX_PERSONAL_ACCOUNT_PASSWORD=your-sandbox-password

# Production Credentials (for live environment)
PAYPAL_CLIENT_ID=your-production-client-id
PAYPAL_CLIENT_SECRET=your-production-secret

# Platform fee percentage (e.g., 5 for 5%)
PAYPAL_PLATFORM_FEE_PERCENTAGE=5

# ============================================
# MercadoPago Configuration (ARGENTINA - PRINCIPAL)
# ============================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
# Obt√©n tus credenciales en: https://www.mercadopago.com.ar/developers/panel/credentials

# ============================================
# Firebase (Push Notifications)
# ============================================
FIREBASE_SERVICE_ACCOUNT_KEY=base64-encoded-service-account-json

# ============================================
# Email Service Provider
# ============================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Redis Cache - OPTIONAL
# ============================================
# Local Redis: redis://localhost:6379
# Redis Cloud: redis://default:PASSWORD@HOST:PORT
# Example: redis://default:your-password@redis-xxxxx.provider.com:13362
REDIS_URL=

# ============================================
# Google Analytics - OPTIONAL
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# Sentry Error Monitoring
# ============================================
# DESHABILITADO - No se usa Sentry
# Se utiliza sistema de analytics custom

# ============================================
# Frontend Environment Variables
# ============================================
VITE_API_URL=http://localhost:5000
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
VITE_MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
